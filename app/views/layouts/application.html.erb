<!DOCTYPE html>
<html>
  <head>
    <title>BlocWiki</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="nav nav-tabs">
        <%= link_to "Home", welcome_index_path %>
        <%= link_to "About", welcome_about_path %>
        <% if user_signed_in? %>
          <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link pull-right' %>
          <span class="pull-right">-</span>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link pull-right'  %>
          <span class="pull-right">|</span>
          <strong class = "pull-right"><%= link_to current_user.email, :class => 'navbar-link' %></strong>

        <% else %>
          <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link'  %> -
          <%= link_to "Sign In", new_user_session_path, :class => 'navbar-link'  %>
        <% end %>
    </div>
      <%= yield %>
  </div>
  </body>
</html>
